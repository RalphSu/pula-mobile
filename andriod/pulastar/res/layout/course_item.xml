<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#DDFF7F00"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- <ImageView
        android:id="@+id/course_imageView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription"/> -->
        
    <ImageView
        android:id="@+id/course_imageView"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:contentDescription="@string/nul"
        android:layout_marginLeft="0dp"
        android:src="@drawable/deer"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/course_item_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/course_imageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:text="coursename"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3C3C3C"     
        />
        
    
    <TextView
        android:id="@+id/course_branchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/course_imageView"
        android:layout_below="@+id/course_item_title"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:text="zhengda"
        android:textSize="15sp"
        android:textColor="#000000"
        tools:ignore="HardcodedText,RtlHardcoded" />
    
    <TextView
        android:id="@+id/course_classroomname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/course_imageView"
        android:layout_below="@+id/course_branchName"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:text="classroomname"
        android:textColor="#000000"
        tools:ignore="HardcodedText,RtlHardcoded" />
    

</RelativeLayout>
