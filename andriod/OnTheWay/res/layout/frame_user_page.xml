<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/pula_logo_show" >

        <TextView
            android:id="@+id/user_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_my_info"
            style="@style/Stylewidthhight_wm"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/my_info"
            android:contentDescription="@string/nul" />

        <ImageView
            android:id="@+id/img_my_course"
            style="@style/Stylewidthhight_wm"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/my_course"
            android:contentDescription="@string/nul" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_my_booking"
            style="@style/Stylewidthhight_wm"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/my_booking"
            android:contentDescription="@string/nul" />

        <ImageView
            android:id="@+id/img_my_point"
            style="@style/Stylewidthhight_wm"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/my_point"
            android:contentDescription="@string/nul" />
    </LinearLayout>

</RelativeLayout>