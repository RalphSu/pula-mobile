<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
   	android:layout_marginBottom="5dp"
    android:background="@color/white"
  xmlns:tools="http://schemas.android.com/tools">

    <!-- <ImageView
        android:id="@+id/course_imageView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription"/> -->
        
    <ImageView
        android:id="@+id/course_imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/nul"
        android:layout_marginLeft="0dp"
        android:src="@drawable/pula_logo_circle"
        />

    <TextView
        android:id="@+id/course_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/course_imageView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="日客则地区->加德满都"
        android:textColor="#000000"
        android:textSize="25sp"
        tools:ignore="HardcodedText,RtlHardcoded" />
        
    <TextView
        android:id="@+id/course_branchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/course_imageView"
        android:layout_alignBottom="@+id/course_imageView"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:text="zhengda"
        android:textSize="15sp"
        android:textColor="#000000"
        tools:ignore="HardcodedText,RtlHardcoded" />
    
    <TextView
        android:id="@+id/course_classroomname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/course_branchName"
        android:layout_alignBottom="@+id/course_imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:text="classroomname"
        android:textColor="#000000"
        tools:ignore="HardcodedText,RtlHardcoded" />
    
    <ImageView
        android:id="@+id/course_image_click"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/nul"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/right_45"
        />

</RelativeLayout>
