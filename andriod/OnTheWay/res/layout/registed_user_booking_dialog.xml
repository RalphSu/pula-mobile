<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center|top" 
    >

    <TextView
        android:id="@+id/booking_dialog_head"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#669900"
        android:textSize="18sp" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#99cc66" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" 
        >

        <TextView
            android:id="@+id/tv_user_no"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            android:gravity="bottom"
            android:text="用户编号:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp" />

      <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_below="@id/tv_user_no"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            android:gravity="bottom"
            android:text="预约课程:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/tv_booking_time_name"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_below="@id/tv_course_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="bottom"
            android:text="预约时间:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18sp" />
    
    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_enter"
        android:layout_width="100dp"
        android:layout_height="50dip"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/nul"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/enter" />
    
        <!-- 
           <Button
            android:id="@+id/btn_enter"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="确认"
            android:textColor="#000000"
            android:textSize="25sp" />
        -->

</LinearLayout>