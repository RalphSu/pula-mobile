<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#FFCC99"
    android:orientation="horizontal" >

           
     <ImageView
        android:id="@+id/huodong_imageView"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:contentDescription="@string/nul"      
        android:src="@drawable/aaa"
        android:scaleType="fitXY"
        />
      
     <TextView
        android:id="@+id/huodong_item_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/huodong_imageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="#3C3C3C"
        android:textSize="20sp"
       />

    <TextView
        android:id="@+id/huodong_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/huodong_item_title"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:textColor="#3C3C3C"
        android:textSize="15sp" />
    
        
</RelativeLayout>
